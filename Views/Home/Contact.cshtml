@model Blog.Models.EmailModel
@{
    ViewBag.Title = "";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="container" id="contactMeContainer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Contact Me</h4>
        
        @Html.ValidationSummary(" ", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
            <div class="col">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control contactFieldWidth", @maxlength = "25" })
                
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
            <div class="col">
                @Html.TextBoxFor(m => m.FromEmail, new { @maxlength = "100", @class = "form-control contactFieldWidth", placeholder = "example@email.com" })
                
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
            <div class="col">
                @Html.TextBoxFor(m => m.Subject, new { @maxlength = "100", @class = "form-control contactFieldWidth" })
                
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
            <div class="col">
                @Html.TextAreaFor(m => m.Body, new { @class = "form-control contactFieldWidth" })
                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" id="contactMeButton" value="Send" />
            </div>
        </div>
        
    }
</div>
